@model MVCForum.Website.Areas.Admin.ViewModels.CategoryViewModel
@{
    ViewBag.Title = "Create Category";
}

@Html.Partial("_CategoryNavButtons")

@using (Html.BeginForm("CreateCategory", "AdminCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false)
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Create New Category</legend>

        @Html.Partial("_CategoryFields", Model)

        <div class="submit-holder">
            <input type="submit" class="btn-mvc btn-mvc-green btn-mvc-large" value="Create" />
        </div>
    </fieldset>
}
